COMPONENT=Xspec
VERSION=

CONFIGURE_CMD='cd $h_dir; ./configure --build=$build --with-heatop=$prefix --enable-collapse=$h_collapse --with-heacore=$h_config_heacore --enable-shared=$h_shared --enable-symbols=$h_symbols --enable-strip=$h_strip --enable-guis=no --with-copt="$h_copt" --with-cxxopt="$h_cxxopt" --with-fopt="$h_fopt" --enable-ldopt="$h_ldopt" --enable-hera=$h_hera_build --enable-png=$h_png_bld --with-png=$h_png_pfx --x-libraries=$x_libraries --x-includes=$x_includes --enable-openmp=$h_openmp --enable-mac_32bit=$h_mac_32bit_build'

HEACORE=heacore
TCLTK=tcltk

DEPENDENCIES="$HEACORE $TCLTK"
