#
# Imakefile for ANL
#

/* please edit Imakefile.def for local configuration.
   DO NOT edit this file directly.
*/
#include "adsoft.versions"	/* specify versions to use in this file */
#include "Imakefile.def"

/* Sub Directories */

SUBDIRS = src tools include

/* headers */

BUILDINCTOP = .
BUILDINCDIR = .

/* Imake Rules */

MakeSubdirs($(SUBDIRS))

MakefileSubdirs($(SUBDIRS))

InstallSubdirs($(SUBDIRS))

CleanSubdirs($(SUBDIRS))

DependTarget()

all:: Includes.make

Includes.make: Imakefile.def Includes.make.pl
	$(RM) $@
	perl $@.pl Imakefile.def >$@
