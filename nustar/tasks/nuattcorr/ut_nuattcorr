#!/usr/bin/perl
#
#  ut_nuattcorr
#
#
#
# Changes:
#      0.1.0 : NS 25/10/2012 - First Release
#
#

use strict;
use ut_nustar;



# main
{
# Object Istances
    my $ut = ut_nustar->new(
			    name    => "nuattcorr",
			    utname  => "ut_nuattcorr",
			    version => "0.1.0",
			    );
    
# Set Parameter
    my $input = $ut->getParam("input_dir");
    my $output = $ut->getParam("output_dir") . "/" . $ut->getParam("utname");
    $ut->setParam("output_dir",$output);
    my $chat = $ut->getParam("chatter");
    my $clobber = $ut->getParam("clobber");
    
# I/O Directory Check
    $ut->checkIODirectory()
        if $ut->isValid;

# Environment check
    my @chk_env = ("LHEASOFT", "HEADAS", "CALDB");

    $ut->checkEnvironment(@chk_env)
        if $ut->isValid;
    
    my $ArchDir="ut_nuattcorr";  
    
# Input Files Check
    my @chk_inp = ("$input/$ArchDir/nu00015011001_att.fits.gz",
		   );

    $ut->checkExist("Input", @chk_inp)
	if $ut->isValid;
    
# Prototype Check
   my @chk_proto = ("$input/$ArchDir/ut_nuattcorr_att.fits",
		    );
    $ut->checkExist("Prototype", @chk_proto)
        if $ut->isValid;

# Executables Files Check
    my @chk_exe = ("nuattcorr","ftdiff","fverify", "pquery2");
    $ut->checkExecutable(@chk_exe)
        if $ut->isValid;

# Task Files Check
    my %par_task = (
		    attfile         => "$input/$ArchDir/nu00015011001_att.fits.gz",
		    outattfile      => "$output/out_nuattcorr_att.fits",
		    chuoffsetfile   => "CALDB",
		    chatter         =>  $chat,
		    clobber         =>  "$clobber",
		    history         =>  "yes" 
		    );

    $ut->runTask(%par_task)
	if $ut->isValid;
    if($ut->isValid)
    {
	
# fverify
	$ut->fverify("$output/out_nuattcorr_att.fits");	
	
# ftdiff
	$ut->ftdiff("$output/out_nuattcorr_att.fits",
		    "$input/$ArchDir/ut_nuattcorr_att.fits");

    }
    
    $ut->delete();
}

