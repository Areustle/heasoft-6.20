#!/usr/bin/perl
#
#  ut_nucalcpi_fpma
#
#
#
# Changes:
#      0.1.0 : NS 07/07/2011 - First Release
#      0.1.1 : NS 16/02/2012 - Added 'clcfile' and 'clcfilterfile' input parameters
#      0.1.2 : NS 26/05/2015 - Changed Dataset
#
#

use strict;
use ut_nustar;



# main
{
# Object Istances
    my $ut = ut_nustar->new(
			    name    => "nucalcpi",
			    utname  => "ut_nucalcpi_fpma",
			    version => "0.1.2",
			    );
    
# Set Parameter
    my $input = $ut->getParam("input_dir");
    my $output = $ut->getParam("output_dir") . "/" . $ut->getParam("utname");
    $ut->setParam("output_dir",$output);
    my $chat = $ut->getParam("chatter");
    my $clobber = $ut->getParam("clobber");
    
# I/O Directory Check
    $ut->checkIODirectory()
        if $ut->isValid;

# Environment check
    my @chk_env = ("LHEASOFT", "HEADAS", "CALDB");

    $ut->checkEnvironment(@chk_env)
        if $ut->isValid;
    
    my $ArchDir="ut_nucalcpi";  
    
# Input Files Check
    my @chk_inp = ("$input/$ArchDir/nu00015011001A_uf.evt.gz",
                   "$input/$ArchDir/nu00015011001A_fpm.hk.gz",
		   );

    $ut->checkExist("Input", @chk_inp)
	if $ut->isValid;
    
# Prototype Check
   my @chk_proto = ("$input/$ArchDir/ut_nucalcpi_fpma.evt",
		    );
    $ut->checkExist("Prototype", @chk_proto)
        if $ut->isValid;

# Executables Files Check
    my @chk_exe = ("nucalcpi","ftdiff","fverify", "pquery2");
    $ut->checkExecutable(@chk_exe)
        if $ut->isValid;

# Task Files Check
    my %par_task = (

		    infile      =>  "$input/$ArchDir/nu00015011001A_uf.evt.gz",
		    hkfile      =>  "$input/$ArchDir/nu00015011001A_fpm.hk.gz",
		    outfile     =>  "$output/out_nucalcpi_fpma.evt",
		    gainfile    =>  "CALDB",
		    clcfile     =>  "CALDB",
		    clcfilterfile=>  "CALDB",
		    temperature =>  5, 
		    chatter     =>  $chat,
		    clobber     =>  "$clobber",
		    history     =>  "yes" 
		    );

    $ut->runTask(%par_task)
	if $ut->isValid;
    if($ut->isValid)
    {
	
# fverify
	$ut->fverify("$output/out_nucalcpi_fpma.evt");
	
	
# ftdiff
	$ut->ftdiff("$output/out_nucalcpi_fpma.evt",
		    "$input/$ArchDir/ut_nucalcpi_fpma.evt");
    }    
    
    $ut->delete();
}

